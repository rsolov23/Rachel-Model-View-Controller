<div class="row">
  <div class="col-sm-10">
    <div class="card text-white mb-3">
      <div class="card-body">
        <div class="title">
          <a href="/post/{{id}}" target="_blank">{{title}}</a>

        </div>
        <div class="meta">
          {{post_text}}

          by
          {{user.username}}
          on
          {{format_date created_at}}
          |
          <a href="/post/{{id}}">{{comments.length}}{{format_plural
              "comment"
              comments.length
            }}</a>
        </div>

      </div>
    </div>
  </div>
</div>