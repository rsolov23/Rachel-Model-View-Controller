<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The Tech Blog</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="style.css" />
  </head>

  <body>
    <div class="wrapper">
      <header>

        <nav class="navbar" style="background-color: #312244;">
          <div class="container-fluid">
            <a href="/" class="navbar-brand mb-0 h1" style="color: #006466;">The
              Tech Blog</a>
            {{#if loggedIn}}
              <a href="/dashboard" style="color: #006466;">Dashboard</a>
              <button
                id="logout"
                class="btn"
                style="color: #006466;"
              >Logout</button>
            {{else}}
              <a href="/login" style="color: #006466;">Login</a>
            {{/if}}
          </div>
        </nav>
      </header>
      <main>
        {{{body}}}
      </main>

    </div>

    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{/if}}
  </body>

</html>